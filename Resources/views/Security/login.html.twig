{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content_title %}{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}{% endblock fos_user_content_title %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <li>
                {{ error|trans({}, 'FOSUserBundle') }}
            </li>
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin" role="form">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="stacked">
        <input id="username" name="_username" type="username" class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" value="{{ last_username }}" required autofocus>
        <input id="password" name="_password" type="password" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" value="" required>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
</form>
<ul>
    <li><a href="{{ path('fos_user_registration_register') }}">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</a></li>
    <li><a href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</a></li>
</ul>
{% endblock fos_user_content %}
